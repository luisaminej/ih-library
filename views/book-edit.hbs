<h1>Editar libro</h1>

{{!-- libro: libroEncontrado --}}
<form action="/books/{{libro._id}}/edit" method="POST">
<form>
   <label>
       Título:
        <input type="text" name="title" value="{{libro.title}}"/>

    </label>

    <hr/>

     <label>
         Autor:
        <input type="text" name="author" value="{{libro.author}}"/>

    </label>

 <hr/>

     <label>
         Calificación:
        <input type="number"  min="1" max="10" name="rating" value="{{libro.rating}}"/>

    </label>
     <hr/>
     <label>
         Descripción:
        <textarea type="text" cols="60" rows="10" name="description"> 
            {{libro.description}}
            </textarea>

    </label>
    <br/>
    <button class="save-edit" type="submit">
        
        Salvar cambios
        
    </button>

</form>
